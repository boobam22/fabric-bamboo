{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "run",
			"type": "shell",
			"command": "./gradlew",
			"args": [
				":bamboo-inventory:runClient",
				"--debug-jvm"
			],
			"isBackground": true
		},
		{
			"label": "stop",
			"type": "shell",
			"command": "pkill",
			"args": [
				"-f",
				":bamboo-inventory:runClient"
			],
		}
	]
}